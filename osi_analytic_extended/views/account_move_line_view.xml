<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit account move line form-->
        <record id="view_move_line_form_extended" model="ir.ui.view">
            <field name="name">account.move.line.form.extended</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="product_category_id"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit account move line Tree-->
        <record id="view_move_line_tree_extended" model="ir.ui.view">
            <field name="name">account.move.line.tree.extended</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="product_category_id"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit account move line Filter-->
        <record id="view_account_move_line_filter_extended" model="ir.ui.view">
            <field name="name">account.move.line.filter.extended</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="product_category_id"/>
                </xpath>
                <xpath expr="//filter[@name='partner']" position="after">
                    <filter string="Product category" name="product_category" domain="[]" context="{'group_by':'product_category_id'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>